<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!--解决乱码 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.multipart.maxSize" value="1073741824" /><!--1024*1024*1024 
		一个G -->

	<!-- 此文件不可更改：导入 -->
	<include file="struts2/struts2_admin.xml"></include>
	<include file="struts2/struts2_system.xml"></include>
	<include file="struts2/struts2_teacher.xml"></include>
	<include file="struts2/struts2_page.xml"></include>

</struts>
